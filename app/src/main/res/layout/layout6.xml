<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"/>

    <HorizontalScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/center_size"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Hi"
        android:textColor="@color/white"
        android:textSize="@dimen/size"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal"
        tools:ignore="ScrollViewCount">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="Nice!"
                android:textColor="@color/white"
                android:textSize="@dimen/size" />

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="Nice!"
                android:textColor="@color/white"
                android:textSize="@dimen/size"
                app:layout_constraintLeft_toRightOf="@id/one" />

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="Nice!"
                android:textColor="@color/white"
                android:textSize="@dimen/size"
                app:layout_constraintLeft_toRightOf="@id/two" />

            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="Nice!"
                android:textColor="@color/white"
                android:textSize="@dimen/size"
                app:layout_constraintLeft_toRightOf="@id/three" />

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="Nice!"
                android:textColor="@color/white"
                android:textSize="@dimen/size"
                app:layout_constraintLeft_toRightOf="@id/four" />

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="Nice!"
                android:textColor="@color/white"
                android:textSize="@dimen/size"
                app:layout_constraintLeft_toRightOf="@id/five" />

            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="Nice!"
                android:textColor="@color/white"
                android:textSize="@dimen/size"
                app:layout_constraintLeft_toRightOf="@id/six" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>